#CS 104-04

print("Welcome to the Basic Calculator!")
print("1. Addition")
print("2. Subtraction")
print("3. Multiplication")
print("4. Division")
print("5. Remainder")

final = ""
operation = int(input("Choose your operation: "))
one_str = int(input("Input a number: "))
two_str = int(input("Input a numer: "))

#additiom
if operation == 1:
    final = one_str + two_str
    print(f'{one_str} plus {two_str} is equal to {final}!')

#subtraction
elif operation == 2:
    final = one_str - two_str
    print(f'{one_str} minus {two_str} is equal to {final}!')

#multiplication
elif operation == 3:
    final = one_str * two_str
    print(f'{one_str} times {two_str} is equal to {final}!')

#division
elif operation == 4:
    final = one_str / two_str
    print(f'{one_str} divided by {two_str} is {final}!')

#remainder
elif operation == 5: 
    final = one_str % two_str
    print(f'The remainder of {one_str} divided by {two_str} is {final}!')

else:
    print("Invalid input!")





    


